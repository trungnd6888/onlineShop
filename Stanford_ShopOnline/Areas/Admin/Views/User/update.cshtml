@model Stanford_ShopOnline.Models.EF.User

@{
    ViewBag.Title = "update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="title-5 m-b-35">Cập nhật người dùng</h3>
        <div class="col-lg-12">
            @using (Html.BeginForm("update", "User", FormMethod.Post, new { encType = "multipart/form-data" }))
            {
            <form>
                <div class="row">
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, new { @class = "control-label mb-1" }) <span style="color:red">*</span>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-group has-success">
                            @Html.LabelFor(model => model.UserName, new { @class = "control-label mb-1" }) <span style="color:red">*</span>
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
              
                <div class="row">
                    <div class="col-12 col-sm-12">
                        <div class="form-group">
                            @Html.Label("fileUpload", "Đường dẫn ảnh", new { @class = "control-label mb-1" })
                            @Html.TextBox("fileUpload", null, new { @class = "form-control", @type = "file" })
                            @Html.ValidationMessage("fileUpload", "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.ImageUrl)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Tel, new { @class = "control-label mb-1" })
                            @Html.TextBoxFor(model => model.Tel, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, new { @class = "control-label mb-1" })
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type = "email" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Address, new { @class = "control-label mb-1" })
                            @Html.TextAreaFor(model => model.Address, new { @class = "form-control", @rows = "4" })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Role_Id, "Vai trò", new { @class = "control-label mb-1" })
                            @Html.DropDownListFor(model => model.Role_Id, (SelectList)ViewBag.roleList, "Chọn vai trò", new { @class = "form-control" })

                            @*Hidden field*@
                            @Html.HiddenFor(model => model.CreateDate)
                            @Html.HiddenFor(model => model.Password)
                            @Html.HiddenFor(model => model.PasswordConfirm)
                            @*@Html.HiddenFor(model => model.Password)
        @Html.HiddenFor(model => model.PasswordConfirm)*@
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <button id="payment-button" type="submit" class="btn btn-info">
                        <i class="fa fa-check"></i>&nbsp;
                        <span id="payment-button-amount">Cập nhật</span>
                        <span id="payment-button-sending" style="display:none;">Sending…</span>
                    </button>
                    <a href=@Url.Action("list","User") class="btn btn-info">
                        <i class="fa fa-arrow-left"></i>&nbsp;
                        <span id="payment-button-amount">Trở về</span>
                        <span id="payment-button-sending" style="display:none;">Sending…</span>
                    </a>
                </div>
            </form>
            }
        </div>
    </div>
</div>
