@model Stanford_ShopOnline.Models.EF.News
@{
    ViewBag.Title = "update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="title-5 m-b-35">Cập nhật tin tức</h3>
        <div class="col-lg-12">
            @using (Html.BeginForm("update", "News", FormMethod.Post, new { encType = "multipart/form-data" }))
            {
            <form>
                <div class="row">
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Title, new { @class = "control-label mb-1" }) <span style="color:red">*</span>
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-group has-success">
                            @Html.LabelFor(model => model.Summary, new { @class = "control-label mb-1" }) <span style="color:red">*</span>
                            @Html.TextBoxFor(model => model.Summary, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Summary, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Content, new { @class = "control-label mb-1"})
                    @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @rows = "4" })
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            @Html.Label("fileUpload", "Đường dẫn ảnh", new { @class = "control-label mb-1" })
                            @Html.TextBox("fileUpload", null, new { @class = "form-control", @type = "file" })
                            @Html.ValidationMessage("fileUpload", "", new { @class = "text-danger" })

                            @*Hidden field*@
                            @Html.HiddenFor(model => model.CreateDate)
                            @Html.HiddenFor(model => model.ApprovedDate)
                            @Html.HiddenFor(model => model.UpdateDate)
                            @Html.HiddenFor(model => model.ImageUrl)
                            @Html.HiddenFor(model => model.User_Id)
                            @Html.HiddenFor(model => model.Approved_Id)
                        </div>
                    </div>
                </div> 
              
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            @Html.Label("IsApproved")&nbsp;
                            @Html.CheckBox("IsApproved")
                        </div>
                    </div>
                    <div class="col-6">
                    </div>
                </div>
                <div class="text-center">
                    <button id="payment-button" type="submit" class="btn btn-info">
                        <i class="fa fa-check"></i>&nbsp;
                        <span id="payment-button-amount">Cập nhật</span>
                        <span id="payment-button-sending" style="display:none;">Sending…</span>
                    </button>
                    <a href=@Url.Action("list","News") class="btn btn-info">
                        <i class="fa fa-arrow-left"></i>&nbsp;
                        <span id="payment-button-amount">Trở về</span>
                        <span id="payment-button-sending" style="display:none;">Sending…</span>
                    </a>
                </div>
            </form>
            }
        </div>
    </div>
</div>
