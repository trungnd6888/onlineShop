@model Stanford_ShopOnline.Models.EF.Customer
@{
    ViewBag.Title = "add";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="title-5 m-b-35">Thêm mới khách hàng</h3>
        <div class="col-lg-12">
            @using (Html.BeginForm("add", "CustomerOrder", FormMethod.Post, new { encType = "multipart/form-data" }))
            {
            <form>
                <div class="row">
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, new { @class = "control-label mb-1" }) <span style="color:red">*</span>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-group has-success">
                            @Html.LabelFor(model => model.BirthDay, new { @class = "control-label mb-1" }) 
                            @Html.TextBoxFor(model => model.BirthDay, new { @class = "form-control", @type = "date" })
                            @Html.ValidationMessageFor(model => model.BirthDay, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group has-success">
                    @Html.LabelFor(model => model.Address, new { @class = "control-label mb-1" }) 
                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>

                <div class="row">
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Tel, new { @class = "control-label mb-1" }) 
                            @Html.TextBoxFor(model => model.Tel, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-group has-success">
                            @Html.LabelFor(model => model.Email, new { @class = "control-label mb-1" }) 
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type = "email" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <button id="payment-button" type="submit" class="btn btn-info">
                        <i class="fa fa-plus"></i>&nbsp;
                        <span id="payment-button-amount">Thêm</span>
                        <span id="payment-button-sending" style="display:none;">Sending…</span>
                    </button>
                    <a href=@Url.Action("list","Customer") class="btn btn-info">
                        <i class="fa fa-arrow-left"></i>&nbsp;
                        <span id="payment-button-amount">Trở về</span>
                        <span id="payment-button-sending" style="display:none;">Sending…</span>
                    </a>
                </div>
            </form>
            }
        </div>
    </div>
</div>
